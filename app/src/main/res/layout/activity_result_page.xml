<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"

    tools:context=".ResultPageActivity">

    <RelativeLayout
        android:id="@+id/mainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        >

        <ImageView
            android:id="@+id/imageView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:srcCompat="@drawable/ic_back_arrow_blue" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/mali_medium"
            android:gravity="center_horizontal"
            android:text="Ecnglish Language"
            android:textColor="@color/appBlue"
            android:textSize="18sp" />
    </LinearLayout>



       <ScrollView
           android:layout_width="match_parent"
           android:layout_below="@id/top"
           android:layout_height="match_parent">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_gravity="center_horizontal"
               android:gravity="center"
               android:paddingLeft="40dp"
               android:paddingRight="40dp"
               android:orientation="vertical">

               <TextView
                   android:id="@+id/textView23"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="15dp"
                   android:layout_marginTop="20dp"
                   android:textAlignment="center"
                   android:text="Weldone Jide, \nkeep practising"
                   android:textColor="#3F3D56"
                   android:textSize="18sp"
                   />

               <TextView
                   android:id="@+id/textView15"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="10dp"
                   android:fontFamily="@font/montserrat_regular"
                   android:text="20/25"
                   android:textAlignment="center"
                   android:textColor="#3F3D56"
                   android:textSize="18sp"
                   />

               <androidx.cardview.widget.CardView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   app:cardCornerRadius="12dp"
                   android:layout_marginTop="10dp"
                   app:cardElevation="20dp">

                   <ImageView
                       android:id="@+id/imageView16"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_centerHorizontal="true"
                       android:layout_centerVertical="true"

                       android:layout_marginBottom="15dp"
                       app:srcCompat="@drawable/ic_result_img" />

               </androidx.cardview.widget.CardView>

               <TextView
                   android:id="@+id/quest"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:fontFamily="@font/mali_medium"
                   android:gravity="center"
                   android:layout_marginBottom="10dp"
                   android:text="Questions"
                   android:layout_marginTop="40dp"
                   android:textAlignment="center"
                   android:textColor="#000000"
                   android:textSize="20sp" />

               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       android:gravity="center"
                       android:layout_alignParentLeft="true">


                       <ImageView
                           android:id="@+id/imageView24"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:layout_marginRight="10dp"
                           app:srcCompat="@drawable/checked" />

                       <TextView
                           android:id="@+id/correct"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:fontFamily="@font/montserrat_regular"
                           android:gravity="center"
                           android:text="20 Correct"
                           android:textAlignment="center"
                           android:textColor="#57576B"
                           android:textSize="17sp" />

                   </LinearLayout>

                   <TextView
                       android:id="@+id/answered"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_alignParentRight="true"
                       android:layout_weight="1"
                       android:fontFamily="@font/montserrat_regular"
                       android:gravity="center"
                       android:text="20 Answered"

                       android:textColor="#57576B"
                       android:textSize="17sp" />



               </RelativeLayout>

               <ImageView
                   android:id="@+id/bline"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:layout_marginTop="10dp"
                   android:layout_marginBottom="10dp"
                   app:srcCompat="@drawable/bline" />


               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       android:gravity="center"
                       android:layout_alignParentLeft="true">


                       <ImageView
                           android:id="@+id/imageView300"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:layout_marginRight="10dp"
                           app:srcCompat="@drawable/ncheck" />

                       <TextView
                           android:id="@+id/wrong"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:fontFamily="@font/montserrat_regular"
                           android:gravity="center"
                           android:text="10 Incorrect"
                           android:textAlignment="center"
                           android:textColor="#57576B"
                           android:textSize="17sp" />

                   </LinearLayout>

                   <TextView
                       android:id="@+id/uanswered"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:fontFamily="@font/montserrat_regular"

                       android:text="10 Unanswered"
                       android:layout_alignParentRight="true"
                       android:textAlignment="center"
                       android:textColor="#57576B"
                       android:textSize="17sp" />



               </RelativeLayout>
               <ImageView
                   android:id="@+id/aline"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:layout_marginTop="10dp"
                   android:layout_marginBottom="10dp"
                   app:srcCompat="@drawable/bline" />

               <ImageView
                   android:id="@+id/csolution"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="22dp"
                   android:layout_centerHorizontal="true"
                   android:layout_centerVertical="true"
                   android:layout_marginBottom="15dp"
                   app:srcCompat="@drawable/csolution" />

               <ImageView
                   android:id="@+id/stat"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="7dp"
                   android:layout_centerHorizontal="true"
                   android:layout_centerVertical="true"

                   android:layout_marginBottom="15dp"
                   app:srcCompat="@drawable/stat" />





           </LinearLayout>



       </ScrollView>


</RelativeLayout>

</RelativeLayout>